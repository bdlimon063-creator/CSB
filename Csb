<script>
// sequential buttons
b1.style.display="flex";
function showNext(n){
  let b=document.getElementById("b"+n);
  if(b) b.style.display="flex";
}

// time
function time(){
  document.getElementById("time").innerText=
  new Date().toLocaleString("bn-BD",{hour12:false});
}
setInterval(time,1000);time();

